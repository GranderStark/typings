{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "lib": [
      "ES2015"
    ],
    "declaration": true,
    "outDir": "./build",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "typedocOptions": {
    "name": "@open-rpc/typings",
    "mode": "file",
    "src": [ "./src/index.ts" ],
    "out": "docs",
    "includeDeclarations": true,
    "excludeNotExported": true,
    "excludePrivate": true,
    "excludeProtected": true,
    "hideGenerator": true,
    "listInvalidSymbolLinks": true,
    "readme": "./README.md",
    "exclude": [
      "node_modules",
      "docs",
      "build",
      "jest.config.js",
      "src/**/*.test.ts"
    ],
    "toc": [
      "MethodTypings"
    ]
  }
}
